<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.badikirwan.dicoding.footballmatch">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".view.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".view.detail.DetailActivity"
                android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".view.teamdetails.TeamDetailsActivity">
        </activity>
        <activity
                android:name=".view.searchmatch.SearchMatchActivity"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".view.playerdetails.PlayerDetailActivity"
                android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>